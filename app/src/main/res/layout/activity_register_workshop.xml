<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:tint="#000000"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Header -->
        <TextView
            android:id="@+id/tvWorkshopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register for Workshop"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"/>

        <!-- Phone & Roll -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Phone"
                android:inputType="phone"
                android:background="@drawable/input_bg"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/etRoll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Roll No"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Year -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Year"
            android:background="@drawable/input_bg"
            android:padding="12dp"/>

        <!-- Department -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Computer Science"
            android:background="@drawable/input_bg"
            android:padding="12dp"/>

        <!-- Expectations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you expect from this workshop?"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etExpectation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:background="@drawable/input_bg"
            android:padding="12dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Registration"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_gradient"/>

    </LinearLayout>
</ScrollView>
